menu "Display Engine Configuration"
	depends on DRM && DRM_AMDGPU

config DRM_AMD_DC
	bool "AMD DC - Enable new display engine"
	default y
	select SND_HDA_COMPONENT if SND_HDA_CORE
	select DRM_AMD_DC_DCN if (X86 || PPC64) && !(KCOV_INSTRUMENT_ALL && KCOV_ENABLE_COMPARISONS)
	select DRM_AMD_DC_DCN2_1 if DRM_AMD_DC_DCN
	select DRM_AMD_DC_DCN3_0 if DRM_AMD_DC_DCN
	select DRM_AMD_DC_DCN3_01 if DRM_AMD_DC_DCN
	help
	  Choose this option if you want to use the new display engine
	  support for AMDGPU. This adds required support for Vega and
	  Raven ASICs.

config DRM_AMD_DC_DCN
	def_bool n
	help
	  RV and NV family support for display engine

config DRM_AMD_DC_DCN2_1
	def_bool n
	help
	  Choose this option if you want to have
	  Renoir support for display engine

config DRM_AMD_DC_HDCP
	bool "Enable HDCP support in DC"
	depends on DRM_AMD_DC
	help
	 Choose this option
	 if you want to support
	 HDCP authentication

config DRM_AMD_DC_DCN3_0
	def_bool n
	help
	    Choose this option if you want to have
	    Mero support for display engine

config DRM_AMD_DC_DCN3_01
	def_bool n
	help
	    Choose this option if you want to have
	    Mero support for display engine


config DEBUG_KERNEL_DC
	bool "Enable kgdb break in DC"
	depends on DRM_AMD_DC
	help
	  Choose this option
	  if you want to hit
	  kdgb_break in assert.

config DARK_MODE_OPTIMIZED
	bool "Enable additional dark mode power optimizations"
	default n
	depends on DRM_AMD_DC
	help
	  Choose this option if front-end pipe power optimizations should be
	  enabled when entering/exiting dark mode. If disabled, only DP link
	  power will be optimized.

config DARK_MODE_FORCE_NO_PATTERN_LT
	bool "Force no pattern link training during dark mode exit"
	default y
	depends on DRM_AMD_DC
	help
	  Choose this option if no pattern link training (idle pattern)
	  should be used on receivers that report no-aux link training
	  capability. This is a hack to force no-pattern link training on
	  the Chicago2/Orion device, when it reports no-aux link training
	  caps.

config MERO_ORION_B_DPRX
	bool "Using Analogix Orion Bx as MERO DP receiver"
	default y
	depends on DRM_AMD_DC
	help
	  Choose this option if Analogix Orion Bx is connected as MERO DPRX sink
	  device.

config DRM_AMD_VSYNC_STB_LOGGING
	bool "Enable STB logging of VSync event"
	default n
	depends on DRM_AMD_DC
	help
		Choose this option if you want to have VSync STB logging in Mero.
		Includes addition of various pci device structs in order to
		properly use the STB buffer.
		If disabled, then VSync will not be logged to the STB buffer.

endmenu
